{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src", "types"]
}
