{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true, // until content is converted into ts
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["./types", "./node_modules/@types", "../client/types", "../client/node_modules/@types"],
    "paths": {
      "react-native-web": ["../client/node_modules/react-native/index"],
    }
  },
  "include": ["src", "types", "vite.config.ts", "generateTypes.ts", "../client/types"],
}

