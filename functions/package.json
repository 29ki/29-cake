{
  "name": "29k-cupcake-functions",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": "16"
  },
  "main": "lib/functions/src/index.js",
  "scripts": {
    "build:content": "yarn --cwd \"../content\" build",
    "build:watch": "tsc --watch",
    "build": "yarn build:content && tsc",
    "logs": "firebase functions:log",
    "serve": "yarn build && firebase emulators:start --project demo-29k-cupcake",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn serve",
    "test:lint": "eslint --ext .js,.ts",
    "test:ts": "tsc --noEmit",
    "test": "yarn build:content && yarn test:ts && yarn test:lint"
  },
  "dependencies": {
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.18.0",
    "ramda": "^0.28.0",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@types/ramda": "^0.28.14",
    "@types/semver": "^7.3.10",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-functions-test": "^2.1.0",
    "firebase-tools": "^11.3.0",
    "prettier": "^2.7.1",
    "typescript": "^4.5.4"
  }
}
